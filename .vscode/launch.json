	"version": "0.2.0",
	"configurations": [
		{
			"name": "WSL - Build",
			"type": "f5anything",
			"request": "launch",
			"command": "wsl make kernel",
			"terminalName": "Build the OS",
			"terminalIndex": -1,
			"showTerminal": true,
			"vscCommand": ""
		}, {
			"name": "WSL - ISO",
			"type": "f5anything",
			"request": "launch",
			"command": "wsl make iso",
			"terminalName": "Compile the ISO file",
			"terminalIndex": -1,
			"showTerminal": true,
		}, {
			"name": "WSL - Clean",
			"type": "f5anything",
			"request": "launch",
			"command": "wsl make clean",
			"terminalName": "Clean all files",
			"terminalIndex": -1,
			"showTerminal": true,
		}, {
			"name": "WSL - Clear",
			"type": "f5anything",
			"request": "launch",
			"command": "wsl make clean",
			"terminalName": "Clear all temp files",
			"terminalIndex": -1,
			"showTerminal": true,
		}, {
			"name": "Win - Launch",
			"type": "f5anything",
			"request": "launch",
			"command": "$version = Get-Content -Raw -Path 'VERSION'; & qemu-system-x86_64  -nographic -m 4G -smp 2 -vga qxl -cdrom \"./out/iso/AuraOS-$version.iso\"",
			"terminalName": "Launch the OS - QEMU",
			"terminalIndex": -1,
			"showTerminal": true,
		}, {
			"name": "Win - FULL",
			"type": "f5anything",
			"request": "launch",
			"command": "clear ; wsl make clean ; wsl make kernel ; wsl make iso ; $version = Get-Content -Raw -Path 'VERSION'; & qemu-system-x86_64 -m 4G -smp 2 -vga qxl -cdrom \"./out/iso/AuraOS-$version.iso\"",
			"terminalName": "Launch the OS - QEMU",
			"terminalIndex": -1,
			"showTerminal": true,
		},
	]
}